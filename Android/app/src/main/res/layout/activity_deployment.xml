<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/deployment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/deployment"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_margin="@dimen/margin_normal"
            android:text="nk-company-2019"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edittext_background"
            android:padding="@dimen/spacing_normal"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:text="@string/login"
            app:layout_constraintEnd_toEndOf="@+id/deployment"
            app:layout_constraintStart_toStartOf="@+id/deployment"
            app:layout_constraintTop_toBottomOf="@+id/deployment" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>